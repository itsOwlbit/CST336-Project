<%- include('partials/header.ejs') %> 

  <h1>Admin Dashboard</h1>
  <div class="text-center"><a href="/logout" class="logout">[ Logout ]</a></div>
  <br>

<!--   Packages -->
<!-- Update similar to the form on profile -->

 <h1>Update Packages</h1>

<div class="container signup-container">
  <form method="POST" action="/admin">
  
    <div class="col-sm-9">
      <select class="form-select" name="package_id" id='pkg'>
      <% for (i=0; i < packages.length; i++) { %>
        <option value="<%=packages[i].package_id%>">
        <%=packages[i].name%>
        </option>
      <% } %>
      </select></div><br>
      <input class="form-control" type="text" name="price" id="price" value="<%=packages[0].price%>" placeholder="Price in decimal format."> *Decimal value only.  Do not include '$'.<br><br>
      <input class="form-control" type="text" name="picture_url" id="imgUrl" value="<%=packages[0].picture_url%>" placeholder="/img/filename.png"><br>
      <textarea class="form-control" name="description" id="description" placeholder="Package description"><%=packages[0].description%></textarea>
      <input class="form-control w-50 mt-4 input-center input-btn" type='submit' value = 'Update!'>
    </div>
  </form>
</div>
  <br><br>

<% if (typeof message != "undefined"){ %>
     <h3><%=message%></h3>
  <br><br>
<% } %>

<script src = "/js/admin.js" type = "text/javascript"/></script>
<%- include('partials/footer.ejs') %> 