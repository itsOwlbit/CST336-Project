><%- include('partials/header.ejs') %> 

  <h1>Admin Dashboard</h1>
  <div class="text-center"><a href="/logout" class="logout">[ Logout ]</a></div>
  <br>

<!--   Packages -->
<!-- Update similar to the form on profile -->

 <h1>Update Packages</h1>

   <div class="container signup-container">
 <form action="/admin">

    <input type="hidden" name="package_id" value="<%=packages[0].package_id%>">
   <div class="col-sm-9">
     <select class="form-select" name="package_id" id='pkg'>
<% for (i=0; i < packages.length; i++) { %>
  <option value="<%=packages[i].package_id%>">
  <%=packages[i].name%>
  </option>
  <% } %>
     </select></div><br>
<input class="form-control" type="text" name="price" id="price" value="<%=packages[0].price%>"><br>
  <input class="form-control" type="text" name="picture_url" id="imgUrl" value="<%=packages[0].picture_url%>"><br>
     <textarea class="form-control" name="description" id="description"><%=packages[0].description%></textarea>
    

    <input class="form-control w-50 mt-4 input-center bg-primary text-white" type= 'submit' value = 'Update!'>
   </div>
  </form>
 <% if (typeof message != "undefined"){ %>
  		   <h3><%=message%></h3>
 <% } %>

<script src = "/js/admin.js" type = "text/javascript"/></script>
<%- include('partials/footer.ejs') %> 