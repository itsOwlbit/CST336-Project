<%- include('partials/header.ejs') %> 

  <h1>Sign-up</h1>
  <br>
  <% if (typeof message != "undefined"){ %>
  	<h4><%= message %></h4>
  <% } %>
    <br>
    <div class="container signup-container">
      <form method="POST" action="/signup" id='signup'>
        <div class="form-group row mb-2">
          <label for="username" class="col-sm-3 col-form-label font-bolded"> User: </label>
          <div class="col-sm-9">
            <input class="form-control" type='text' name='username'>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="password" class="col-sm-3 col-form-label font-bolded"> Password: </label>
          <div class="col-sm-9">
            <input class="form-control" type='password' name='password'>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="firstname" class="col-sm-3 col-form-label font-bolded"> First Name: </label>
          <div class="col-sm-9">
            <input class="form-control" type='text' name='firstname'>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="lastname" class="col-sm-3 col-form-label font-bolded"> Last Name: </label>
          <div class="col-sm-9">
            <input class="form-control" type='text' name='lastname'>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="address" class="col-sm-3 col-form-label font-bolded"> Address: </label>
          <div class="col-sm-9">
            <input class="form-control" type='text' name='address'>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="city" class="col-sm-3 col-form-label font-bolded"> City: </label>
          <div class="col-sm-9">
            <input class="form-control" type='text' name='city'>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="state" class="col-sm-3 col-form-label font-bolded"> State: </label>
          <div class="col-sm-9">
            <select class="form-select" id="state" name="state"></select>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="zip" class="col-sm-3 col-form-label font-bolded"> Zip: </label>
          <div class="col-sm-9">
            <input class="form-control" type='text' name='zip'>
          </div>
        </div>
        <input class="form-control w-50 mt-4 input-center bg-primary text-white" type='submit' value='JOIN!'>
      </form>
    </div>
    <br><br>
<script src = "/js/signupScript.js" type = "text/javascript"/></script>
<%- include('partials/footer.ejs') %> 

